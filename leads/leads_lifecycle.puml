  LSV : Not Contacted
  LSV : Attempted
  LSV : Contacted
  LSV : Contact in Future
  LSV : Not Qualified
  LSV : Junk Lead
}
state "List Views" as LV {
  LV : All Leads
  LV : Open Leads
  LV : Site Visit Scheduled Leads
}
state "Lead Fields" as LF {
  LF : Lead Name
  LF : Lead Type
  LF : Client Location
  LF : Company
  LF : Telecaller
  LF : Manager
  LF : Reason Qualified Out
  LF : Language Preference
  LF : Budget Range Min / Max / Range
  LF : Timeframe to Purchase
  LF : Loan Requirement
  LF : Lead Source
  LF : Lead Status
  LF : Mobile
  LF : Email
  LF : Estimated Budget
  LF : Preferred Communication Channel
  LF : Type of Property
  LF : Preferred Size (Sq.Ft or Cents)
  LF : Family Decision Involved?
  LF : Deal Closed Time
  LF : Social Lead ID
}
state "Related Lists" as LRL {
  LRL : Notes
  LRL : Connected Records
  LRL : Open Activities
  LRL : Cadences
  LRL : Projects
  LRL : Referrals
  LRL : Documents
  LRL : Emails
  LRL : Closed Activities
  LRL : Invited Meetings
  LRL : Schedules
  LRL : Voice of the Customer
  LRL : Customer Feedback
}
state "Next Action Tasks" as NAT {
  NAT : Attempt 1
  NAT : Attempt 2
  NAT : Followup Task 1 .. N
  NAT : Call
}
@enduml